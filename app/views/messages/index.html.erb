<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
    </div>
</div>
<%# ここからフォーム作成 %>
<form class="form-horizontal" role="form">
    <%= form_for(@message) do |f| %>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">名前</label>
        <div class="col-sm-10">
            <%= f.text_area :name ,:class => "form-control", maxlength:20,rows: 1 %>
        </div>
    </div>
    <div class="form-group">
        <label for="body" class="col-sm-2 control-label">内容</label>
        <div class="col-sm-10">
            <%= f.text_area :body ,:class => "form-control",maxlength:400, rows: 5 %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <%= f.submit"送信",:class => 'btn btn-default'%>
        </div>
    </div>
    <% end %>
</form>
